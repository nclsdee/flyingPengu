<div class="savedtrips">

  <h2 class="text-center">My Trips</h2>
  <div class="container">
  <div class="row">
  <div class="col-md-offset-2 col-md-8">


  <% @trips.sort_by(&:created_at).reverse.each do |trip|  %>

  <!-- <div class="column"> -->
     <div class="demo-title">
    <div class="col-xs-12 ">

       <%= link_to trip_path(trip) do %>

       <!-- Post-->
       <div class="post-module hover">
         <!-- Thumbnail-->

         <div class="thumbnail">
           <div class="date">
             <div class="day"> Trip<!-- <img src="https://cdn.dribbble.com/users/493/screenshots/3750260/penguin_avatar_2017.png"/> --></div>
             <div class="month"></div>
           </div><img src="https://oceanconservancy.org/wp-content/uploads/2016/04/CB030710_blog1-1.jpg"/>
         </div>
         <!-- Post Content-->
         <div class="post-content">
           <div class="category">Details</div>
           <h1 class="title"><%= trip.name %></h1>
           <% trip.hometowns.each do |hometown| %>
           <h4 class="sub_title">Departure airport: <%= hometown.city  %></h4>
           <p class="description"><i class="fas fa-users"></i>Travelers: <%= hometown.number_traveller  %></p>
           <div class="post-meta">
            <span class="timestamp"><i class="fa fa-plane"></i>From: <%= hometown.date_from  %></span>
            <span class="comments"><i class="fa fa-send"></i><a href="#">To: <%= hometown.date_to  %></a></span>
          </div>
          <br>
          <% end %>
       <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, trip_path(trip), method: :delete, data: { confirm: "Are you sure you want to delete this trip?" } %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
    <br>
    <br>
    <br>
  <% end %>
</div>
</div>
</div>
</div>

